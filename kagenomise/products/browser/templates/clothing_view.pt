<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="kagenomise.products">
<body>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <div id="kagenomise-products-view">
            <div class="product-details">
                <h2>Product Details</h2>
                <div tal:content="structure context/text|nothing">
                </div>
            </div>

            <div class="product-order">
                <div class="simpleCart_shelfItem">
                    <input type="text" class="hiddenStructure item_name" 
                        tal:attributes="value context/Title"/>
                    <input type="text" class="hiddenStructure item_path"
                        tal:attributes="value view/item_path"/>
                    <select class="item_size" type="text">
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                    </select>
                    Quantity: <input type="text" value="1" class="item_Quantity"/><br/>
                    Price: <span class='item_price'>MYR30.00</span>
                    <a class="item_add" href="javascript:;">Add to Cart</a>
                </div>
            </div>
        </div>
  </metal:content-core>
</metal:main>

</body>
</html>

